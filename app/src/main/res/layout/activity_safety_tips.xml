<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:id="@+id/relativeLayoutID"
    tools:context="user.SafetyTips">

    <ScrollView
        android:id="@+id/scrollView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


       <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:rowCount="5"
        android:columnCount="1"
        android:layout_margin="5dp"
        >



        <androidx.cardview.widget.CardView
            android:id="@+id/floodCardViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="0"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"

            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_gravity="center_horizontal|center_vertical"
                android:layout_marginVertical="10dp"
                >
                <ImageView
                    android:id="@+id/floodID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/flood"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Flood"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/theme_color"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/tsunamiCardViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="1"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:id="@+id/tsunamiID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/tsunami"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tsunami"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/theme_color"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:id="@+id/earthquakeCardViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="2"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:id="@+id/earthquakeID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/earthquake"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Earthquake"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/theme_color"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>
           <androidx.cardview.widget.CardView
            android:id="@+id/cycloneCardViewID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_row="3"
            android:layout_column="0"
            android:layout_gravity="fill"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginVertical="10dp"
                android:layout_gravity="center_horizontal|center_vertical"
                >
                <ImageView
                    android:id="@+id/cycloneID"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:scaleType="fitCenter"
                    android:src="@drawable/cyclone"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cyclone"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:textColor="@color/theme_color"
                    android:layout_marginLeft="10dp"
                    android:textAlignment="center"
                    />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/fireCardViewID"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_row="4"
               android:layout_column="0"
               android:layout_gravity="fill"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:layout_margin="8dp"
               app:cardCornerRadius="8dp"
               app:cardElevation="10dp"
               >

               <LinearLayout
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:gravity="center"
                   android:layout_marginVertical="10dp"
                   android:layout_gravity="center_horizontal|center_vertical"
                   >
                   <ImageView
                       android:id="@+id/fireID"
                       android:layout_width="40dp"
                       android:layout_height="40dp"
                       android:scaleType="fitCenter"
                       android:src="@drawable/fire"
                       />
                   <TextView
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"
                       android:text="Fire"
                       android:textStyle="bold"
                       android:textSize="20sp"
                       android:textColor="@color/theme_color"
                       android:layout_marginLeft="10dp"
                       android:textAlignment="center"
                       />
               </LinearLayout>
           </androidx.cardview.widget.CardView>


       </GridLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavID"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_nav_items"
        android:background="@drawable/shape_bottom_nav"
        />

</RelativeLayout>

