<!-- res/drawable/curved_gradient_background.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Curved shape (adjust the top radius for the curve) -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#00FFFFFF"/>
            <corners android:topLeftRadius="30dp" android:topRightRadius="30dp"/>
        </shape>
    </item>

    <!-- Gradient background -->
    <item android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#E0E5FF"

                android:endColor="#BCCDFD"
                android:angle="45"/>
            <corners android:radius="20dp"/> <!-- Adjust the radius for the curved effect -->
        </shape>
    </item>

</layer-list>
